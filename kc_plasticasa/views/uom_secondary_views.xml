<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_line_uom_secondary" model="ir.ui.view">
            <field name="name">sale.order.line.uom.secondary</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_qty']" position="after">
                    <field name="qty_secondary" string="Cantidad alterna" invisible="not uom_secondary_id"/>
                    <field name="uom_secondary_id" string="UoM alterna" invisible="not uom_secondary_id"/>
                </xpath>
            </field>
        </record>

