<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_invoices_report_wizard_form" model="ir.ui.view">
        <field name="name">kc.sales.invoices.report.wizard.form</field>
        <field name="model">kc.sales.invoices.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Facturas de cliente">
                <sheet>
                    <group>
                        <group>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_pdf" type="object" string="PDF" class="btn-primary"/>
                    <button string="Cerrar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sales_invoices_report_wizard" model="ir.actions.act_window">
        <field name="name">Facturas de cliente</field>
        <field name="res_model">kc.sales.invoices.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_sales_invoices_report_wizard_form"/>
    </record>

    <menuitem id="menu_sales_invoices_report_wizard"
              name="Reporte con terminos"
              parent="account.menu_finance_reports"
              action="action_sales_invoices_report_wizard"
              sequence="25"
              groups="account.group_account_basic,account.group_account_readonly"/>
</odoo>
