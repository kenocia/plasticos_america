<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_kc_payment_batch_line_tree_manual" model="ir.ui.view">
        <field name="name">kc.payment.batch.line.tree.manual</field>
        <field name="model">kc.payment.batch.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="payment_ref"/>
            </list>
        </field>
    </record>

    <record id="view_kc_payment_batch_line_tree_invoice" model="ir.ui.view">
        <field name="name">kc.payment.batch.line.tree.invoice</field>
        <field name="model">kc.payment.batch.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="partner_id"/>
                <field name="invoice_id"/>
                <field name="amount_due"/>
                <field name="amount"/>
                <field name="payment_ref"/>
            </list>
        </field>
    </record>

    <record id="view_kc_payment_batch_wizard_form" model="ir.ui.view">
        <field name="name">kc.payment.batch.wizard.form</field>
        <field name="model">kc.payment.batch.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Lote de Pagos">
                <sheet>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="partner_type"/>
                            <field name="payment_type"/>
                            <field name="journal_id"/>
                            <field name="payment_method_line_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="payment_date"/>
                            <field name="currency_id"/>
                            <field name="batch_reference"/>
                            <field name="load_mode"/>
                            <field name="auto_post"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Manual" invisible="load_mode != 'manual'">
                            <field name="line_ids">
                                <list editable="bottom" decoration-warning="amount &lt;= 0">
                                    <field name="partner_id"/>
                                    <field name="amount"/>
                                    <field name="payment_ref"/>
                                </list>
                            </field>
                        </page>
                        <page string="Desde Facturas" invisible="load_mode != 'invoices'">
                            <div class="text-muted mb-2">
                                Si hay facturas en distintas monedas, se crearán lotes separados por moneda.
                            </div>
                            <field name="line_ids">
                                <list editable="bottom" decoration-warning="amount &lt;= 0">
                                    <field name="partner_id"/>
                                    <field name="invoice_id"/>
                                    <field name="is_advance"/>
                                    <field name="amount_due"/>
                                    <field name="amount" string="Monto a pagar" required="1" readonly="0"/>
                                    <field name="payment_ref"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_generate_batch" type="object" string="Crear pagos" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_kc_payment_batch_wizard" model="ir.actions.act_window">
        <field name="name">Crear Lote de Pagos</field>
        <field name="res_model">kc.payment.batch.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

