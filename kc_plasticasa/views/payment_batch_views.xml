    <record id="view_pa_account_payment_batch_tree" model="ir.ui.view">
        <field name="name">pa.account.payment.batch.list</field>
        <field name="model">pa.account.payment.batch</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="journal_id"/>
                <field name="date"/>
                <field name="amount_total"/>
            </list>
        </field>
    </record>

    <record id="view_pa_account_payment_batch_form" model="ir.ui.view">
        <field name="name">pa.account.payment.batch.form</field>
        <field name="model">pa.account.payment.batch</field>
        <field name="arch" type="xml">
            <form string="Lote de Pagos">
                <header>
                    <!-- 'oe_highlight' hace que el botón sea el principal (azul/morado) -->
                    <button name="action_create_payments" 
                            type="object" 
                            string="Crear pagos" 
                            class="oe_highlight"
                            confirm="¿Estás seguro de que deseas generar los pagos para este lote?"
                            invisible="state != 'draft'"/>
                    <button name="%(action_report_pa_account_batch_payment)d"
                            type="action"
                            string="Imprimir lote"
                            class="btn-secondary"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,applied"/>
                </header>
                <sheet>
                    <!-- Título estilo Odoo estándar -->
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Referencia del Lote"/>
                        <h1>
                            <field name="name" placeholder="Ej. Lote de Proveedores - Enero 2024"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="journal_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="payment_method_line_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <!-- widget="monetary" añade el símbolo de moneda si existe currency_id -->
                            <field name="amount_total" widget="monetary" readonly="1" decoration-bf="1"/>
                            <field name="auto_post" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- PESTAÑA 1: Líneas para procesar -->
                        <page string="Líneas del Lote" name="batch_lines">
                            <field name="line_ids" nolabel="1">
                                <list editable="bottom" decoration-muted="is_processed" multi_edit="1">
                                    <field name="partner_id" required="1"/>
                                    <field name="partner_type" optional="show"/>
                                    <field name="payment_type" optional="hide"/>
                                    <field name="payment_ref" string="Ref. Pago"/>
                                    <!-- sum="Total" muestra la suma al pie de la columna -->
                                    <field name="amount" sum="Total Lote"/>
                                    <field name="is_processed" column_invisible="True"/>
                                </list>
                            </field>
                        </page>

                        <!-- PESTAÑA 2: Resultados -->
                        <page string="Pagos Generados" name="generated_payments">
                            <field name="payment_ids" readonly="1">
                                <list decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                                    <field name="date"/>
                                    <field name="payment_reference"/>
                                    <field name="partner_id"/>
                                    <field name="amount" sum="Total Generado"/>
                                    <!-- Badge muestra el estado como etiqueta de color -->
                                    <field name="state" widget="badge" 
                                        decoration-success="state == 'posted'" 
                                        decoration-info="state == 'draft'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pa_account_payment_batch" model="ir.actions.act_window">
        <field name="name">Lotes de pagos (KC)</field>
        <field name="res_model">pa.account.payment.batch</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_pa_account_payment_batch_receivables"
              name="Lotes de pagos (KC)"
              parent="account.menu_finance_receivables"
              action="action_pa_account_payment_batch"
              sequence="20"
              groups="account.group_account_basic,account.group_account_readonly"/>
    <menuitem id="menu_pa_account_payment_batch_payables"
              name="Lotes de pagos (KC)"
              parent="account.menu_finance_payables"
              action="action_pa_account_payment_batch"
              sequence="20"
              groups="account.group_account_basic,account.group_account_readonly"/>
</odoo>
