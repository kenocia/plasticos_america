<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista de formulario para el wizard de advertencias -->
        <record id="account_move_warning_wizard_form" model="ir.ui.view">
            <field name="name">account.move.warning.wizard.form</field>
            <field name="model">account.move.warning.wizard</field>
            <field name="arch" type="xml">
                <form string="Advertencia Fiscal">
                    <sheet>
                        <div class="alert alert-warning" role="alert">
                            <field name="warning_type" invisible="1"/>
                            <field name="move_id" invisible="1"/>
                            <field name="warning_message" readonly="1" nolabel="1"/>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_continue" string="Continuar" type="object" class="btn-primary"/>
                        <button name="action_cancel" string="Cancelar" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- AcciÃ³n para abrir el wizard -->
        <record id="action_account_move_warning_wizard" model="ir.actions.act_window">
            <field name="name">Advertencia Fiscal</field>
            <field name="res_model">account.move.warning.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="account_move_warning_wizard_form"/>
        </record>

    </data>
</odoo>