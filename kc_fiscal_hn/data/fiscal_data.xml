<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Grupos de impuestos fiscales para Honduras -->
        <record id="tax_group_isv" model="account.tax.group">
            <field name="name">ISV</field>
            <field name="sequence">10</field>
            <field name="country_id" ref="base.hn"/>
        </record>

        <record id="tax_group_exento" model="account.tax.group">
            <field name="name">Exento</field>
            <field name="sequence">20</field>
            <field name="country_id" ref="base.hn"/>
        </record>

        <record id="tax_group_exonerado" model="account.tax.group">
            <field name="name">Exonerado</field>
            <field name="sequence">30</field>
            <field name="country_id" ref="base.hn"/>
        </record>

        <record id="tax_group_retencion" model="account.tax.group">
            <field name="name">Retención</field>
            <field name="sequence">40</field>
            <field name="country_id" ref="base.hn"/>
        </record>

        <!-- Impuestos ISV estándar -->
        <record id="tax_isv_15" model="account.tax">
            <field name="name">ISV 15%</field>
            <field name="amount">15.0</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="tax_group_isv"/>
            <field name="tipo_impuesto">isv</field>
            <field name="codigo_sar">01</field>
            <field name="es_deducible">True</field>
            <field name="aplica_retencion">False</field>
        </record>

        <record id="tax_isv_18" model="account.tax">
            <field name="name">ISV 18%</field>
            <field name="amount">18.0</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="tax_group_isv"/>
            <field name="tipo_impuesto">isv</field>
            <field name="codigo_sar">02</field>
            <field name="es_deducible">True</field>
            <field name="aplica_retencion">False</field>
        </record>

        <!-- Impuesto exento -->
        <record id="tax_exento" model="account.tax">
            <field name="name">Exento</field>
            <field name="amount">0.0</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="tax_group_exento"/>
            <field name="tipo_impuesto">exento</field>
            <field name="codigo_sar">03</field>
            <field name="es_deducible">False</field>
            <field name="aplica_retencion">False</field>
        </record>

        <!-- Impuesto exonerado -->
        <record id="tax_exonerado" model="account.tax">
            <field name="name">Exonerado</field>
            <field name="amount">0.0</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="tax_group_exonerado"/>
            <field name="tipo_impuesto">exonerado</field>
            <field name="codigo_sar">04</field>
            <field name="es_deducible">False</field>
            <field name="aplica_retencion">False</field>
        </record>

        <!-- Impuesto de retención -->
        <record id="tax_retencion" model="account.tax">
            <field name="name">Retención ISV</field>
            <field name="amount">1.0</field>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">purchase</field>
            <field name="tax_group_id" ref="tax_group_retencion"/>
            <field name="tipo_impuesto">retencion</field>
            <field name="codigo_sar">05</field>
            <field name="es_deducible">True</field>
            <field name="aplica_retencion">True</field>
        </record>

        <!-- Secuencias fiscales por defecto -->
        <record id="sequence_fiscal_invoice" model="ir.sequence">
            <field name="name">Secuencia Fiscal Facturas</field>
            <field name="code">fiscal.invoice</field>
            <field name="prefix">FAC/%(range_year)s/</field>
            <field name="padding">8</field>
            <field name="use_date_range">True</field>
            <field name="implementation">no_gap</field>
            <field name="is_fiscal">True</field>
            <field name="dias_alerta">30</field>
            <field name="numeros_alerta">100</field>
            <field name="fiscal_range_start">1</field>
            <field name="fiscal_range_end">99999999</field>
            <field name="number_next">1</field>
        </record>

        <record id="sequence_fiscal_credit_note" model="ir.sequence">
            <field name="name">Secuencia Fiscal Notas de Crédito</field>
            <field name="code">fiscal.credit.note</field>
            <field name="prefix">NC/%(range_year)s/</field>
            <field name="padding">8</field>
            <field name="use_date_range">True</field>
            <field name="implementation">no_gap</field>
            <field name="is_fiscal">True</field>
            <field name="dias_alerta">30</field>
            <field name="numeros_alerta">100</field>
            <field name="fiscal_range_start">1</field>
            <field name="fiscal_range_end">99999999</field>
            <field name="number_next">1</field>
        </record>

        <record id="sequence_fiscal_guide" model="ir.sequence">
            <field name="name">Secuencia Fiscal Guías de Remisión</field>
            <field name="code">stock.picking.guide</field>
            <field name="prefix">GR/%(range_year)s/</field>
            <field name="padding">8</field>
            <field name="use_date_range">True</field>
            <field name="implementation">no_gap</field>
            <field name="is_fiscal">True</field>
            <field name="dias_alerta">30</field>
            <field name="numeros_alerta">100</field>
            <field name="fiscal_range_start">1</field>
            <field name="fiscal_range_end">99999999</field>
            <field name="number_next">1</field>
        </record>

    </data>
</odoo> 