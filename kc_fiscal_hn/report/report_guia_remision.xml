<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="id_report_guia_remision">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <t t-set="address" t-value="None"/>
                        <div class="page">
                            <div class="oe_structure"/>
                            <span>GUIA DE REMISION</span>
                            <h2 t-field="o.sar_name" class="mt0"/>
                            <div class="oe_structure"/>
                            <div class="row mb2">
                                <div class="col-auto" name="div_date">
                                    <strong>Fecha:</strong>
                                    <span t-field="o.scheduled_date" t-options="{'format': 'dd/MM/yyyy'}"/>
                                </div>
                            </div>
                            <br/>
                            <div class="row mb2">
                                <div class="col-6" name="div_origin">
                                    <strong>Remitente:</strong>
                                    <span t-field="o.company_id.name"/>,
                                    <span t-field="o.picking_type_id.warehouse_id.name"/>
                                </div>
                                <div class="col-6" name="div_state">
                                    <strong>RTN/ID N° (Remitente):</strong>
                                    <span t-field="o.company_id.vat"/>
                                </div>
                            </div>
                            <br/>
                            <div class="row mb2">
                                <div class="col-6" name="div_state">
                                    <strong>Destinatario:</strong>
                                    <span t-field="o.partner_id.name"/>
                                </div>
                                <div class="col-6" name="div_origin">
                                    <strong>RTN/ID N° (Destinatario):</strong>
                                    <span t-field="o.partner_id.vat"/>
                                </div>
                            </div>
                            <br/>
                            <div class="row mb2">
                                <div class="col-6" name="div_state">
                                    <strong>Punto de Partida:</strong>
                                    <span t-field="o.company_id.name"/>,
                                    <span t-field="o.picking_type_id.warehouse_id.name"/>
                                </div>
                                <div class="col-6" name="div_origin">
                                    <strong>Punto de Destino:</strong>
                                    <span t-field="o.partner_id.name"/>
                                </div>
                            </div>
                            <br/>
                            <div class="row mb2">
                                <div class="col-6" name="div_state">
                                    <strong>Motivo de Traslado:</strong>
                                    <span t-field="o.motivo_traslado"/>
                                </div>
                                <div class="col-6" name="div_origin">
                                    <strong>Referencia:</strong>
                                    <span t-field="o.origin"/>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <table class="table table-sm" t-if="o.move_line_ids and o.move_ids_without_package">
                                <t t-set="has_barcode"
                                   t-value="any(move_line.product_id and move_line.product_id.sudo().barcode or move_line.package_id for move_line in o.move_line_ids)"/>
                                <t t-set="has_serial_number"
                                   t-value="any(move_line.lot_id or move_line.lot_name for move_line in o.move_line_ids)"
                                   groups="stock.group_production_lot"/>
                                <thead>
                                    <tr>
                                        <th name="th_product">
                                            <strong>Product</strong>
                                        </th>
                                        <th>
                                            <strong>Quantity</strong>
                                        </th>
                                        <th name="th_serial_number" class="text-center" t-if="has_serial_number">
                                            <strong>Lot/Serial Number</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.move_line_ids_without_package.sorted(lambda ml: (ml.location_id.complete_name, ml.location_dest_id.complete_name))"
                                       t-as="ml">
                                        <tr>
                                            <td>
                                                <span t-field="ml.product_id.display_name">Customizable Desk</span>
                                                <br/>
                                                <span t-if="ml.product_id.description_picking"
                                                      t-field="ml.product_id.description_picking">Description on
                                                    transfer
                                                </span>
                                            </td>
                                            <td>
                                                <span t-field="ml.quantity">3.00</span>
                                                <span t-field="ml.product_uom_id" groups="uom.group_uom">units</span>
                                                <span t-if="ml.move_id.product_packaging_id">
                                                    <span t-if="o.state != 'done'">
                                                        (
                                                        <span t-field="ml.product_packaging_qty"
                                                              t-options="{&quot;widget&quot;: &quot;integer&quot;}"/>
                                                        <span t-field="ml.move_id.product_packaging_id.name"/>)
                                                    </span>
                                                    <span t-if="o.state == 'done'">
                                                        (
                                                        <span t-field="ml.product_packaging_qty"
                                                              t-options="{&quot;widget&quot;: &quot;integer&quot;}"/>
                                                        <span t-field="ml.move_id.product_packaging_id.name"/>)
                                                    </span>
                                                </span>
                                            </td>
                                            <td class=" text-center h6" t-if="has_serial_number">
                                                <span t-if="has_serial_number and (ml.lot_id or ml.lot_name)"
                                                      t-esc="ml.lot_id.name or ml.lot_name"
                                                      t-options="{'widget': 'barcode', 'humanreadable': 1, 'width': 400, 'height': 100, 'img_style': 'width:100%;height:35px;'}">
                                                    <div class="bg-light border-1 rounded d-flex flex-column align-items-center justify-content-center px-1 py-2 opacity-75 text-muted text-center">
                                                        (serial barcode)
                                                    </div>
                                                </span>
                                            </td>
                                        </tr>
                                    </t>

                                    <!-- AGREGADO: Separador de U.L. después de los productos -->
                                    <t t-set="result_array" t-value="[1]"/>
                                    <t t-foreach="result_array" t-as="line">
                                        <tr>
                                            <td colspan="2"
                                                style="background-color:#ffffff; text-align: center; font-weight: bold;">
                                                <span>***************************** U.L.
                                                    *******************************
                                                </span>
                                            </td>
                                        </tr>
                                    </t>

                                    <!-- AGREGADO: Espacios vacíos en la tabla -->
                                    <t t-set="result_array"
                                       t-value="[i for i in range(1, 4 - len(o.move_line_ids_without_package) + 1)]"/>
                                    <t t-foreach="result_array" t-as="line">
                                        <tr>
                                            <td colspan="2" style="background-color:#ffffff">
                                                <span style="display: block; height: 8px;"></span>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <br/>
                            <!-- Título de la sección -->
                            <div class="row mb2">
                                <div class="col-12 text-center"
                                     style="font-weight: bold; font-size: 14px; text-decoration: underline;">
                                    <h3 class="mt0">DATOS DEL TRANSPORTISTA</h3>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <!-- Datos del Transportista -->
                            <div class="row mb2">
                                <div class="col-auto" name="div_transporter">
                                    <strong>Nombre del Transportista:</strong>
                                    <span t-field="o.transporter_name"/>
                                </div>
                                <div class="col-auto" name="div_transporter_rtn">
                                    <strong>RTN / Identidad:</strong>
                                    <span t-field="o.transporter_rtn"/>
                                </div>
                            </div>
                            <br/>
                            <div class="row mb2">
                                <div class="col-auto" name="div_vehicle">
                                    <strong>Marca y No. de Placa:</strong>
                                    <span t-field="o.vehicle_info"/>
                                </div>
                                <div class="col-auto" name="div_license">
                                    <strong>Licencia de Conducir:</strong>
                                    <span t-field="o.driver_license"/>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <div class="row mb2">
                                <div class="col-4" name="div_vehicle">
                                    <strong>Fecha Limite de Emisión:</strong>
                                    <strong t-esc="(o.fechaLimiteEmision + relativedelta(hours=+6)).strftime('%d/%m/%Y')"/>
                                </div>
                                <div class="col-8" name="div_license">
                                    <strong>Rango Autorizado:</strong>
                                    <br/>
                                    <strong t-field="o.numeroInicial"/>
                                    -
                                    <strong t-field="o.numeroFinal"/>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <div class="row mb2">
                                <div class="col-6" name="div_vehicle">
                                    <span>Original: Destinatario.</span>
                                    <br/>
                                    <span>Copia 1: Obligado Tributario Emisor.</span>
                                    <br/>
                                    <span>Copia 2: Servicio de Administracion de Rentas.</span>
                                </div>
                                <div class="col-6" name="div_sing">
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <span>Firma: ________________________________________</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>