<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="id_report_credit_note">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <t t-set="doc_currency" t-value="o.currency_id"/>
                            <style>
                                .cn-info-title { font-size: 12px; font-weight: 600; text-transform: uppercase; }
                                .cn-doc-name { font-size: 14px; font-weight: 700; }
                                .cn-label { color: #6c757d; font-size: 12px; }
                                .cn-value { font-size: 12px; }
                                .cn-row-inline { display: flex; gap: 6px; align-items: baseline; }
                                .cn-row-between { display: flex; justify-content: space-between; gap: 8px; align-items: baseline; }
                                .cn-header { border: 1px solid #e9ecef; border-radius: 4px; padding: 10px 12px; background: #f9fafb; }
                                .cn-header table td { padding: 2px 0; }
                                .cn-table thead th { border-bottom: 1px solid #cfd4da; padding-bottom: 6px; }
                                .cn-table tbody td { padding-top: 6px; padding-bottom: 6px; }
                                .cn-table .cn-uline { letter-spacing: 1px; font-size: 11px; color: #6c757d; }
                                .cn-summary table tr td { padding: 4px 0; }
                                .cn-summary .o_total td { border-top: 1px solid #cfd4da; padding-top: 6px; }
                                .cn-box { border: 1px solid #e9ecef; border-radius: 4px; padding: 10px 12px; }
                                .cn-muted { color: #6c757d; font-size: 11px; }
                                .cn-summary-table tbody tr { border-bottom: 1px solid #eef1f4; }
                                .cn-summary-table tbody tr:last-child { border-bottom: none; }
                                .cn-summary-table .cn-label { font-weight: 600; color: #495057; }
                                .cn-summary-table .cn-total-label { color: #d9480f; }
                                .cn-summary-table .cn-total-value { color: #d9480f; font-weight: 700; }
                            </style>
                            <div id="informations" class="mb-2 cn-header">
                                <div class="row">
                                    <!--CLIENTE-->
                                    <div class="col-6">
                                        <div class="cn-info-title">Cliente</div>
                                        <div class="cn-value" t-field="o.partner_id.name"/>
                                        <div class="cn-value">
                                            <t t-if="o.partner_id.street">
                                                <span t-field="o.partner_id.street"/>
                                            </t>
                                            <t t-if="o.partner_id.street2">
                                                , <span t-field="o.partner_id.street2"/>
                                            </t>
                                            <t t-if="o.partner_id.street or o.partner_id.street2">
                                                <br/>
                                            </t>
                                            <t t-if="o.partner_id.city">
                                                <span t-field="o.partner_id.city"/>
                                            </t>
                                            <t t-if="o.partner_id.state_id">
                                                , <span t-field="o.partner_id.state_id"/>
                                            </t>
                                            <t t-if="o.partner_id.country_id">
                                                , <span t-field="o.partner_id.country_id"/>
                                            </t>
                                        </div>
                                        <div class="cn-row-inline">
                                            <span class="cn-label">R.T.N:</span>
                                            <span class="cn-value" t-field="o.partner_id.vat"/>
                                        </div>
                                    </div>
                                    <!--INFORMATIVA-->
                                    <div class="col-6">
                                        <div class="cn-row-between">
                                            <span class="cn-info-title">Nota de Credito</span>
                                            <span class="cn-doc-name" t-field="o.name"/>
                                        </div>
                                        <div>
                                            <div class="cn-row-between">
                                                <span class="cn-label">Fecha de Emision:</span>
                                                <span class="cn-value" t-field="o.date"/>
                                            </div>
                                            <div class="cn-row-between">
                                                <span class="cn-label">Fecha de Vencimiento:</span>
                                                <span class="cn-value" t-field="o.invoice_date_due"/>
                                            </div>
                                            <div class="cn-row-between">
                                                <span class="cn-label">N° de Orden:</span>
                                                <span class="cn-value" t-field="o.sale_order_id.name"/>
                                            </div>
                                            <div class="cn-row-between">
                                                <span class="cn-label">Termino de Pago:</span>
                                                <span class="cn-value" t-field="o.invoice_payment_term_id"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                            <table style="font-size: 12px" class="table table-sm o_main_table table-borderless cn-table"
                                   name="invoice_line_table">
                                <thead>
                                    <tr>
                                        <th name="th_description" class="text-start">
                                            <span>Descripcion</span>
                                        </th>
                                        <!--                                        <th name="th_item" class="text-end">-->
                                        <!--                                            <span>Item</span>-->
                                        <!--                                        </th>-->
                                        <!--                                        <th name="th_lot" class="text-end">-->
                                        <!--                                            <span>Lote</span>-->
                                        <!--                                        </th>-->
                                        <!--                                        <th name="th_expiration_date" class="text-end">-->
                                        <!--                                            <span>F. Expiración</span>-->
                                        <!--                                        </th>-->
                                        <th name="th_quantity" class="text-end">
                                            <span>Cant</span>
                                        </th>
                                        <!--                                        <th name="th_uom" class="text-end">-->
                                        <!--                                            <span>Unidades</span>-->
                                        <!--                                        </th>-->
                                        <th name="th_discount"
                                            t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                            style="text-align: center;">
                                            <span>Descuentos y<br/>Rebajas Otorgadas
                                            </span>
                                        </th>
                                        <th name="th_priceunit"
                                            t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Precio</span>
                                        </th>
                                        <!--                                        <th name="th_taxes"-->
                                        <!--                                            t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">-->
                                        <!--                                            <span>Isv</span>-->
                                        <!--                                        </th>-->
                                        <th name="th_subtotal" class="text-end">
                                            <span>SubTotal</span>
                                            <!--                                            <span groups="account.group_show_line_subtotals_tax_included">Total-->
                                            <!--                                            </span>-->
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="lines"
                                       t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                    <t t-foreach="lines" t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                           groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                           groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="line.display_type == 'product'"
                                               name="account_invoice_line_accountable">
                                                <td name="account_invoice_line_name">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                                <!--                                                <td class="text-end">-->
                                                <!--                                                    <span t-field="line.item"/>-->
                                                <!--                                                </td>-->
                                                <!--                                                <td class="text-end">-->
                                                <!--                                                    <span t-field="line.serial_no"/>-->
                                                <!--                                                </td>-->
                                                <!--                                                <td class="text-center">-->
                                                <!--                                                    <span t-field="line.expiration_date_serial"/>-->
                                                <!--                                                </td>-->
                                                <td class="text-end">
                                                    <span t-field="line.quantity"/>
                                                </td>
                                                <td
                                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span class="text-nowrap" t-field="line.discount"/>
                                                </td>
                                                <!--                                                <td class="text-end">-->
                                                <!--                                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>-->
                                                <!--                                                </td>-->
                                                <td t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span class="text-nowrap" t-field="line.price_unit"/>
                                                </td>
                                                <td class="text-end o_price_total">
                                                    <span class="text-nowrap" t-field="line.price_subtotal"/>
                                                    <!--                                                    <span class="text-nowrap" t-field="line.price_total"/>-->
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-end">
                                                <td colspan="99">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span t-esc="current_subtotal"
                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-set="result_array" t-value="[1]"/>
                                    <t t-foreach="result_array" t-as="line">
                                        <tr>
                                            <td class="cn-uline" style="background-color:#ffffff">
                                                <span>***************************** U.L. *******************************</span>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-set="result_array" t-value="[i for i in range(1, 8 - len(lines) + 1)]"/>
                                    <t t-foreach="result_array" t-as="line">
                                        <tr>
                                            <td style="background-color:#ffffff">
                                                <span style="display: block; height: 8px;"></span>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <!-- SUBTOTALES-->
                            <div class="clearfix mb-4 cn-summary">
                                <div id="total" class="row">
                                    <div class="col-6">
                                        <div class="cn-box">
                                            <div class="cn-label" name="ref">Referencia:</div>
                                            <div class="cn-value" t-field="o.ref"/>
                                        <br/>
                                            <div class="cn-label" name="cai">CAI:</div>
                                            <div class="cn-value"><strong t-field="o.cai"/></div>
                                            <br/>
                                            <div class="cn-label" name="numeroInicial">Rango autorizado:</div>
                                            <div class="cn-value">
                                                <strong t-field="o.numeroInicial"/> - <strong t-field="o.numeroFinal"/>
                                            </div>
                                            <br/>
                                            <div class="cn-label" name="fechaLimiteEmisionAjustada">Fecha Limite de Emision:</div>
                                            <div class="cn-value">
                                                <strong t-if="o.fechaLimiteEmision"
                                                        t-esc="(o.fechaLimiteEmision + relativedelta(hours=+6)).strftime('%d/%m/%Y')"/>
                                                <strong t-else="!o.fechaLimiteEmision"></strong>
                                            </div>
                                            <br/>
                                        <!--                                        <span>-->
                                        <!--                                            No. DE ORDEN DE COMPRA EXENTA :-->
                                        <!--                                        </span>-->
                                        <!--                                        <br/>-->
                                        <!--                                        <span t-field="o.noOrdenCompraExenta"/>-->
                                        <!--                                        <br/>-->
                                        <!--                                        <span>-->
                                        <!--                                            No. CONSTANCIA DE REGISTRO DE EXONERACION :-->
                                        <!--                                        </span>-->
                                        <!--                                        <br/>-->
                                        <!--                                        <span t-field="o.noConsRegistroExonerado"/>-->
                                        <!--                                        <br/>-->
                                        <!--                                        <span>-->
                                        <!--                                            No. REGISTRO SAG :-->
                                        <!--                                        </span>-->
                                        <!--                                        <br/>-->
                                        <!--                                        <span t-field="o.noIdentificacionRegistroSAG"/>-->
                                        <!--                                        <br/>-->
                                            <div class="cn-value">Firma Recibido: ________________________________________</div>
                                            <br/>
                                            <div class="cn-muted">
                                                <div>Original: Cliente.</div>
                                                <div>Copia: Obligado Tributario Emisor.</div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">-->
                                    <div class="col-6" style="font-size: 12px">
                                        <table class="table table-borderless cn-box cn-summary-table"
                                               style="page-break-inside: avoid;">
                                            <!-- Subtotal y campos manuales -->
                                            <tr class="border-black o_subtotal">
                                                <td class="cn-label">
                                                    <strong>Subtotal</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-att-class="oe_subtotal_footer_separator"
                                                          t-field="o.amount_untaxed"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td class="cn-label">
                                                    <strong>Descuentos y Rebajas otorgadas:</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-att-class="oe_subtotal_footer_separator"
                                                          t-field="o.amount_discount"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td class="cn-label">
                                                    <strong>Importe Exento :</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-field="o.amount_exento"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td class="cn-label">
                                                    <strong>Importe Exonerado :</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-field="o.amount_exonerado"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td class="cn-label">
                                                    <strong>Importe Gravado 15% :</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-field="o.gravado_isv15"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td class="cn-label">
                                                    <strong>Importe Gravado 18% :</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-field="o.gravado_isv18"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td class="cn-label">
                                                    <strong>ISV 15% :</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-field="o.amount_isv15"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td class="cn-label">
                                                    <strong>ISV 18% :</strong>
                                                </td>
                                                <td class="text-end">
                                                    <span t-field="o.amount_isv18"/>
                                                </td>
                                            </tr>

                                            <!-- Total -->
                                            <tr class="border-black o_total">
                                                <td class="cn-total-label">
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="text-end cn-total-value">
                                                    <span t-field="o.amount_total"/>
                                                </td>
                                            </tr>
                                        </table>
                                        <div class="cn-box" style="font-size: 12px">
                                            <div class="cn-label">Cantidad en Letra:</div>
                                            <div class="cn-value" t-field="o.totalAmountString"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>