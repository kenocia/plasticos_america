<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="header_custom_layout" name="Custom Header Layout">
            <div style="margin-bottom:10px;">
                <div class="row" style="border-bottom: 2px solid black;">
                    <div class="col-3" style="margin-top:10px">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                            style="max-height:60px;display:block;" alt="Logo"/>
                    </div>
                    
                    <div class="col-4" style="font-size:11px;">
                        <br/>
                        <span class="keep-bold" style="font-size:12px;" t-field="o.company_id"/>
                        <br/>
                        <span>R.T.N</span>
                        <span t-field="o.company_id.vat"/>
                        <br/>
                        <span t-field="o.company_id.street"/>
                        ,
                        <span t-field="o.company_id.city"/>
                        ,
                        <span t-field="o.company_id.state_id.name"/>
                        ,
                        <span t-field="o.company_id.country_id"/>
                        <br/>
                        <span>Tel</span>
                        <span t-field="o.company_id.phone"/>
                        |
                        <span t-field="o.company_id.email"/>
                        <br/>
                    </div>
                    
                    <div class="col-5" style="text-align:right">
                        <span class="keep-bold" style="font-size:11px;">
                            <b>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                    FACTURA DE
                                </span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted' and o.invoice_payment_term_id.name == 'Contado'">
                                    CONTADO
                                </span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted' and o.invoice_payment_term_id.name != 'Contado'">
                                    CREDITO
                                </span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'draft' ">
                                    FACTURA
                                    BORRADOR
                                </span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                    FACTURA
                                    CANCELADA
                                </span>
                                <span t-if="o.move_type == 'out_refund'">NOTA DE CRÉDITO</span>
                                <span t-if="o.journal_id.name == 'Nota de Debito'">NOTA DE DEBITO</span>
                                <span t-if="o.move_type == 'in_refund'">NOTA DE CRÉDITO DE PROVEEDOR
                                </span>
                                <span t-if="o.move_type == 'in_invoice'">FACTURA DE PROVEEDOR</span>
                                <br/>
                                <span>No.</span>
                                <span t-if="o.name != '/'" t-field="o.name"/>
                            </b>
                        </span>
                            
                        <div t-if="o.move_type != 'in_invoice'"
                            style="font-size:10px;text-align:right;">
                            <span>CAI:</span>
                            <span t-field="o.cai"/>
                            <br/>
                            <t t-set="min_range_number" t-value="o.numeroInicial or ''"/>
                            <t t-set="max_range_number" t-value="o.numeroFinal or ''"/>
                            <span style="">Rango Autorizado</span>
                            <br/>
                            <span>Desde:</span>
                            <span t-esc="min_range_number"/>
                            <span>Hasta:</span>
                            <span t-esc="max_range_number"/>
                            <br/>
                            <span>Fecha limite de emisión:</span>
                            <span t-esc="o.fechaLimiteEmision.strftime('%d/%m/%Y') if o.fechaLimiteEmision else ''"/>
                            <br/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" t-if="page_num == 0">
                                <div class="col-3" style="font-size:11px;">
                                    <span>Cliente:</span>
                                    <span class="keep-bold">
                                        <span t-field="o.partner_id"/>
                                    </span>
                                    <br/>
                                    <span>R.T.N.:</span>
                                    <b>
                                        <t t-if="o.partner_id.vat">
                                            <span t-field="o.partner_id.vat"/>
                                        </t>
                                    </b>
                                    <br/>
                                    <span>Direccion:</span>
                                    <span t-field="o.partner_id.street"/>
                                    <br/>
                                    <span>Condición de pago:</span>
                                    <span t-field="o.invoice_payment_term_id"/>
                                </div>
                                <div class="col-5" style="font-size:11px;"
                                     t-if="o.move_type != 'in_invoice' or o.journal_id.name != 'Facturas de Compras'">
                                    <span style="">Numero de correlativo de la ordende Compra Exenta:</span>
                                    <span t-esc="o.noOrdenCompraExenta or ''"/>
                                    <br/>
                                    <span style="">Numero de correlativo de la Constancia Registro de Exonerado:</span>
                                    <span t-esc="o.noConsRegistroExonerado or ''"/>
                                    <br/>
                                    <span style="">Numero identificativo del Registro de la Secretaria de Estado en el despacho de Agricultura y Ganaderia:</span>
                                    <span t-esc="o.noIdentificacionRegistroSAG or ''"/>
                                    <br/>
                                </div>
                                <div class="col-4" style="font-size:11px;text-align:right;"
                                     t-if="o.move_type != 'in_invoice' or o.journal_id.name != 'Facturas de Compras'">
                                    <span>Fecha de Emision:</span>
                                    <span t-esc="o.create_date.strftime('%d/%m/%Y') if o.create_date else ''"/>
                                    <br/>
                                    <span t-if="o.invoice_payment_term_id.name != 'Contado'">Fecha de Vencimiento:</span>
                                    <span t-if="o.invoice_payment_term_id.name != 'Contado'"
                                          t-esc="o.invoice_date_due.strftime('%d/%m/%Y') if o.invoice_date_due else ''"/>
                                    <br/>
                                    <span>Vendedor:</span>
                                    <span t-field="o.invoice_user_id.name"/>
                                </div>
                            </div>
        </template>

        <template id="footer_custom_layout" name="Custom Footer Layout">
            <div class="row" style="margin-top:10px;">
                <div class="col-12">
                    <div class="row">
                        <img t-if="o.company_id.banking_information_image"
                            t-att-src="image_data_uri(o.company_id.banking_information_image)"
                            style="width:100%; height:120px;"/>
                    </div>
                <div style="border-bottom: 2px solid #000; font-weight: bold; color: #000; width:100%; margin-top:10px;"></div>
                </div>
            </div>

              <div class="row" style="margin-top:10px;">
                <div class="col-12">
                        <img t-if="o.company_id.terms_conditions_image"
                         t-att-src="image_data_uri(o.company_id.terms_conditions_image)"
                         style="width:155%; height:120px;"/>
                </div>
              </div>
        </template>
    </data>
</odoo>








